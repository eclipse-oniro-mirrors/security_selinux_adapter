    allow test_server sa_resource_schedule_socperf_server:samgr_class { get };
    allow test_server resource_schedule_service:binder { call transfer };
    allow test_server samgr:binder { transfer };
')
domain_auto_transition_pattern(test_server, SP_daemon_exec, SP_daemon);
allow test_server SP_daemon:file { open read };
allow test_server sh_exec:file { execute execute_no_trans map open read };
